@model _20T1080027.DomainModels.Employee
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Save" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
            @Html.ValidationSummary("", new { @style = "color:#f00" })
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    <input type="file" name="image" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10" style=" display: flex; justify-content: center;">
                    <input type="hidden" name="Photo" value="@Model.Photo">
                    <img id="Photo" src="@Model.Photo" width="100"
                         style="object-fit: contain; object-position: center; cursor: pointer;">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên đệm:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="FirstName" value="@Model.FirstName">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhân viên:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="LastName" value="@Model.LastName">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    @Html.HiddenFor(m => m.BirthDate)
                    @if (Model.EmployeeID > 0)
                    {
                        <input type="text" class="form-control" name="Birthday"
                               value="@string.Format("{0:dd/MM/yyyy}", Model.BirthDate)" placeholder="">
                    }
                    else
                    {
                        <input type="text" class="form-control" name="Birthday" placeholder="Ví dụ: 01/01/1900">
                    }

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" name="Email" value="@Model.Email">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Notes" value="@Model.Notes">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-danger">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>


