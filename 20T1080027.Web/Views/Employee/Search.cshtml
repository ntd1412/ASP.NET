@model _20T1080027.Web.Models.EmployeeSearchOutput
@{
    Layout = null;
}

<p style="margin-top:10px">
    Có <strong>@Model.RowCount</strong> nhà cung cấp trong tổng số <strong>@Model.PageCount</strong> trang.
</p>
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr class="bg-primary">
                <th>Mã nhân viên</th>
                <th>Ảnh nhân viên</th>
                <th>Họ và tên đệm</th>
                <th>Tên nhân viên</th>
                <th>Ngày sinh</th>
                <th>Email</th>
                <th>Ghi chú</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @* phải khai báo tổng quát model *@
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.EmployeeID</td>
                    <td> <img src="@item.Photo" width="50" height="50"></td>
                   
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@string.Format("{0:dd/MM/yyyy}", @item.BirthDate)</td>
                    <td>@item.Email</td>
                    <td>@item.Notes</td>
                    <td class="text-left">
                        <a href="~/Employee/Edit/@item.EmployeeID" class="btn btn-xs btn-primary">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Employee/Delete/@item.EmployeeID" class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }

    </ul>
</div>



